{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "ts/tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": {
				"kind": "build",
				"isDefault": true,
			},
			"label": "tsc: build"
		},
		{
			"type": "process",
			"command": "dotnet",
			"label": "cs: build",
			"problemMatcher": "$msCompile",
            "args": [
                "build",
                "${workspaceFolder}/cs/aoc2021.csproj"
            ],
		},
		{
			"type": "process",
			"command": "dotnet",
			"label": "cs: clean",
			"problemMatcher": "$msCompile",
            "args": [
                "clean",
                "${workspaceFolder}/cs/aoc2021.csproj",
            ],
		},
		{
			"type": "cppbuild",
			"label": "C++ build",
			"command": "clang++.exe",
			"args": [
				"-std=c++20",
				"-Wall",
				"-Wextra",
				"-g",
				"-o", "aoc2021.exe",
				"src/*.cpp"
			],
			"options": {
				"cwd": "${workspaceFolder}/cpp"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}