{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "ts/tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": {
				"kind": "build",
				"isDefault": true,
			},
			"label": "tsc: build"
		},
		{
			"type": "process",
			"command": "dotnet",
			"label": "cs: build",
			"problemMatcher": "$msCompile",
            "args": [
                "build",
                "${workspaceFolder}/cs/aoc2021.csproj"
            ],
		},
		{
			"type": "process",
			"command": "dotnet",
			"label": "cs: clean",
			"problemMatcher": "$msCompile",
            "args": [
                "clean",
                "${workspaceFolder}/cs/aoc2021.csproj",
            ],
		}
	]
}